---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
import EdTimeElement from "../components/cv/EdTimeElement.astro";
---

<BaseLayout title="Resume" sideBarActiveItemID="cv">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Education</div>
  </div>

  <div class="time-line-container grid gap-4 mb-8">
    <EdTimeElement
      date="2022 - 2026"
      educationTitle="PhD in Computing"
      university="Imperial College London, London, United Kingdom"
      studyCenterUrl="https://www.imperial.ac.uk/"
      additionalInfo={[
        "Digital Humans",
        "Diffusion Models",
        "4D Animation"
      ]}
      supervisor="Professor Stefanos Zafeiriou"
      supervisorUrl="https://www.imperial.ac.uk/people/s.zafeiriou"
    />
    <EdTimeElement
      date="2017 - 2022"
      educationTitle="BSc + MEng in Computer Science"
      university="University of Patras, Patras, Greece"
      studyCenterUrl="https://www.upatras.gr/en/"
      additionalInfo={[
        "GPA: 9.15/10 (Valedictorian, Class of 2022)",
        "Diploma Thesis Title: Robust image alignment under severe photometric distortions"
      ]}
      advisor="Professor Emmanouil Z. Psarakis"
      advisorUrl="http://xanthippi.ceid.upatras.gr/people/psarakis/personal_gr.php"
    />
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Experience</div>
  </div>

  <div class="time-line-container mb-10">
    <EdTimeElement
      date="January 2024 - Present"
      educationTitle="Research Scientist Intern"
      university="Alloyed Limited, Oxford and Imperial College London, London, United Kingdom"
      studyCenterUrl="https://alloyed.com/"
      additionalInfo={[
        "Contributing to the ”Digital Qualification Platform for Advanced Alloy Components” project, a collaborative effort led by Alloyed
         with Imperial College London and other institutions. Representing Imperial’s side, I am an integral part of the computer vision
         team."
      ]}
    />
    <EdTimeElement
      date="2017 - 2022"
      educationTitle="BSc + MEng in Computer Science"
      university="University of Patras, Patras, Greece"
      studyCenterUrl="https://www.upatras.gr/en/"
      additionalInfo={[
        "GPA: 9.15/10 (Valedictorian, Class of 2022)",
        "Diploma Thesis Title: Robust image alignment under severe photometric distortions"
      ]}
      advisor="Professor Emmanouil Z. Psarakis"
      advisorUrl="http://xanthippi.ceid.upatras.gr/people/psarakis/personal_gr.php"
    />
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Certifications</div>
  </div>

  <ul class="list-disc mx-6 mb-10 grid gap-2">
    <li>
      <a href="#" target="_blank"> Certification Name (with link)</a>
    </li>
    <li>
      <a href="#" target="_blank"> Certification Name (with link)</a>
    </li>
  </ul>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Skills</div>
  </div>

  <ul class="list-disc md:columns-5 columns-2 mx-6">
    <li>Skill Name</li>
    <li>Skill Name</li>
    <li>Skill Name</li>
