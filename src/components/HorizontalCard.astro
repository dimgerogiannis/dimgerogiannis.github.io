---
const {
  title,
  img,
  desc,
  url,
  badge,
  tags,
  target = "_blank",
  authors = [],
  publicationInfo,
  arxivUrl,
  projectUrl,
  // We'll still accept a bibUrl if you want a direct link, but...
  bibUrl,
  // ...bibCitation is the text to show in the modal
  bibCitation
} = Astro.props;

import { Image } from "astro:assets";
const tag_url = url.split("/").slice(0, -1).join("/") + "/tag";
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  {/* Entire card clickable */}
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {img && (
        <Image
          src={img}
          width={750}
          height={422}
          format="webp"
          alt={title}
          class="max-w-full md:max-w-[13rem] rounded-lg"
        />
      )}
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>

        {/* Authors */}
        {authors && authors.length > 0 && (
          <p class="text-sm italic text-gray-500">
            {authors.join(', ')}
          </p>
        )}

        {/* Publication Info */}
        {publicationInfo && (
          <p class="text-sm text-gray-600">
            {publicationInfo}
          </p>
        )}

        <p class="py-1 text-1xl">{desc}</p>

        <div class="card-actions justify-end">
          {/* Tags */}
          {tags && tags.map((tag) => (
            <a
              href={`${tag_url}/${tag}`}
              class="badge badge-outline"
              key={tag}
            >
              {tag}
            </a>
          ))}

          {/* Replace BIB link with a modal trigger if bibCitation is provided */}
          {bibCitation ? (
            /* This label toggles the modal (non-dismissable by outside click) */
            <label for={`${title}-bib-modal`} class="badge badge-info">
              BIB
            </label>
          ) : (
            /* Fallback: if you prefer a direct link when there's no bibCitation */
            bibUrl && (
              <a
                href={bibUrl}
                target="_blank"
                class="badge badge-info"
              >
                BIB
              </a>
            )
          )}

          {arxivUrl && (
            <a
              href={arxivUrl}
              target="_blank"
              class="badge badge-accent"
            >
              ArXiv
            </a>
          )}
          {projectUrl && (
            <a
              href={projectUrl}
              target="_blank"
              class="badge badge-success"
            >
              Project
            </a>
          )}
        </div>
      </div>
    </div>
  </a>

  {/* If we have bibCitation, show the modal markup */}
  {bibCitation && (
    <>
      {/* Hidden checkbox that toggles the modal */}
      <input
        type="checkbox"
        id={`${title}-bib-modal`}
        class="modal-toggle"
      />

      {/* Modal that does NOT close on outside click */}
      <div class="modal">
        <div class="modal-box bg-base-100">
          <h3 class="font-bold text-lg">BibTeX</h3>
          <pre class="bg-base-200 p-2 rounded text-sm whitespace-pre-wrap">
{bibCitation}
          </pre>
          <div class="modal-action">
            <label for={`${title}-bib-modal`} class="btn">
              Close
            </label>
          </div>
        </div>
      </div>
    </>
  )}
</div>
