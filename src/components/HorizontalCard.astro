---
const {
  title,
  img,
  desc,
  url,
  badge,
  tags,
  target = "_blank",
  authors = [],
  publicationInfo,
  bibUrl,
  arxivUrl,
  projectUrl
} = Astro.props;

import { Image } from "astro:assets";

// If you want to continue using a "tag" URL scheme:
const tag_url = url.split("/").slice(0, -1).join("/") + "/tag";
---

<div class="rounded-lg bg-base-100 p-4 transition-transform ease-in-out hover:shadow-xl hover:scale-[102%]">
  <div class="flex flex-col md:flex-row gap-4">
    {img && (
      <div class="w-full md:w-1/3">
        <a href={url} target={target}>
          <Image
            src={img}
            width={750}
            height={422}
            format="webp"
            alt={title}
            class="max-w-full rounded-lg"
          />
        </a>
      </div>
    )}

    <div class="w-full md:w-2/3 flex flex-col justify-between">
      <div>
        {/* Title and Badge */}
        <h1 class="text-xl font-bold">
          {title}
          {badge && (
            <span class="badge badge-secondary ml-2">{badge}</span>
          )}
        </h1>

        {/* Authors list */}
        {authors && authors.length > 0 && (
          <p class="mt-1 text-sm italic text-gray-500">
            {authors.join(', ')}
          </p>
        )}

        {/* Publication info */}
        {publicationInfo && (
          <p class="mt-1 text-sm text-gray-600">
            {publicationInfo}
          </p>
        )}

        {/* Optional Description */}
        {desc && (
          <p class="py-2 text-base">
            {desc}
          </p>
        )}
      </div>

      {/* Footer section: Tags & Action Buttons */}
      <div class="flex flex-col md:flex-row items-start md:items-center justify-between mt-2">
        {/* Tags */}
        <div class="flex flex-wrap gap-2">
          {tags && tags.map((tag) => (
            <a
              key={tag}
              href={`${tag_url}/${tag}`}
              class="badge badge-outline"
            >
              {tag}
            </a>
          ))}
        </div>

        {/* Buttons for bib / arxiv / project */}
        <div class="flex gap-2 mt-2 md:mt-0">
          {bibUrl && (
            <a
              href={bibUrl}
              target="_blank"
              class="btn btn-sm btn-info"
            >
              BIB
            </a>
          )}
          {arxivUrl && (
            <a
              href={arxivUrl}
              target="_blank"
              class="btn btn-sm btn-accent"
            >
              ArXiv
            </a>
          )}
          {projectUrl && (
            <a
              href={projectUrl}
              target="_blank"
              class="btn btn-sm btn-success"
            >
              Project
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</div>
