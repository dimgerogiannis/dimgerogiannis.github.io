---
const {
  date,
  educationTitle,
  university,      // This is the study center name plus location (e.g. "Imperial College London, London, United Kingdom")
  studyCenterUrl,  // URL for the study center (optional)
  supervisor,
  supervisorUrl
} = Astro.props;
---

<div class="flex">
  <!-- Timeline Icon/Line -->
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"></span>
  </div>

  <!-- Timeline Data -->
  <div class="education__data bd-grid px-5">
    <!-- Education Title -->
    <h3 class="font-semibold text-xl">{educationTitle}</h3>

    <!-- Date on a new line, same style as Title -->
    <h3 class="font-semibold text-xl mt-1">{date}</h3>

    <!-- University/Study Center with location -->
    <p class="text-sm mt-1">
      {studyCenterUrl ? (
        <a href={studyCenterUrl} target="_blank" class="text-primary hover:underline">
          {university}
        </a>
      ) : (
        university
      )}
    </p>

    <!-- Supervisor in smaller font -->
    <p class="text-sm mt-1">
      Supervisor: 
      <a 
        href={supervisorUrl} 
        target="_blank" 
        class="text-primary hover:underline ml-1"
      >
        {supervisor}
      </a>
    </p>
  </div>
</div>
