---
const {
  date,
  educationTitle,
  university,
  studyCenterUrl,
  additionalInfo = [],  // optional extra info lines as an array of strings
  supervisor,
  supervisorUrl
} = Astro.props;
---

<div class="flex">
  <!-- Timeline Icon/Line -->
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"></span>
  </div>

  <!-- Timeline Data -->
  <div class="education__data bd-grid px-5">
    <!-- Education Title -->
    <h3 class="font-semibold text-xl">{educationTitle}</h3>

    <!-- Date on a new line -->
    <h3 class="font-semibold text-xl mt-1">{date}</h3>

    <!-- University / Study Center -->
    <p class="text-sm mt-1">
      {studyCenterUrl ? (
        <a href={studyCenterUrl} target="_blank" class="text-primary hover:underline">
          {university}
        </a>
      ) : (
        university
      )}
    </p>

    <!-- Additional optional info lines -->
    {additionalInfo && additionalInfo.length > 0 && additionalInfo.map((info) => (
      <p class="text-sm mt-1">{info}</p>
    ))}

    <!-- Supervisor -->
    <p class="text-sm mt-1">
      Supervisor:
      <a 
        href={supervisorUrl} 
        target="_blank" 
        class="text-primary hover:underline ml-1"
      >
        {supervisor}
      </a>
    </p>
  </div>
</div>
